{
  "compilerOptions": {
    "outDir": "./lib",

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
        "es2017"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "pretty": true,
    "removeComments": false,
    "sourceMap": false,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es2017"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test",
    "**/*.spec.ts"
  ]
}