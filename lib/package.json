{
  "name": "spherov2.js",
  "version": "0.1.3",
  "description": "V2 api version for sphero toys (not official)",
  "author": "igbopie",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/igbopie/spherov2.js.git"
  },
  "scripts": {
    "watch": "watch 'yarn prepublishOnly' src",
    "prepublishOnly": "echo 'Compiling...';rm -fR dist; tsc; echo 'DONE';",
    "debug": "ts-node --inspect-brk src/index.ts",
    "start": "ts-node src/index.ts",
    "test": "jest"
  },
  "dependencies": {
    "@abandonware/noble": "^1.9.2-9",
    "debug": "^4.1.1"
  },
  "devDependencies": {
    "@types/debug": "^4.1.2",
    "@types/jest": "^26.0.0",
    "jest": "^26.0.0",
    "node-inspect": "^2.0.0",
    "ts-jest": "^26.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.0",
    "watch": "^1.0.2"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "coverageReporters": [
      [
        "lcov",
        {
          "projectRoot": ".."
        }
      ]
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testURL": "http://localhost",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
