{
  "name": "spherov2.js",
  "version": "0.0.6",
  "description": "V2 api version for sphero toys (not official)",
  "author": "igbopie",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/igbopie/spherov2.js.git"
  },
  "scripts": {
    "prepublishOnly": "rm -fR dist; tsc --declaration",
    "debug": "ts-node --inspect-brk src/index.ts",
    "start": "ts-node src/index.ts",
    "add-all": "git add -A",
    "test": "jest",
    "lint": "tslint --project tsconfig.json -c tslint.json 'src/**/*.ts'",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
    "prettier": "lint-staged",
    "docs": "./node_modules/.bin/typedoc --excludeExternals --excludeProtected --excludePrivate --exclude './{lib,dist,test}/**/*.ts' --theme minimal --readme none --out ../docs --mode modules ."
  },
  "pre-commit": [
    "precommit-msg",
    "lint",
    "test",
    "build",
    "docs",
    "add-all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit-msg && yarn prettier && yarn lint && yarn test && yarn build && yarn docs && yarn add-all"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "noble": "^1.9.0",
    "noble-mac": "git+https://github.com/Timeular/noble-mac.git"
  },
  "devDependencies": {
    "@types/jest": "^23.0.0",
    "@types/noble": "^0.0.38",
    "@types/noble-mac": "0.0.0",
    "husky": "^1.1.4",
    "jest": "^23.0.0",
    "lint-staged": "^8.0.5",
    "node-inspect": "^1.11.3",
    "prettier": "^1.15.2",
    "ts-jest": "^22.4.1",
    "ts-node": "^7.0.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.16.0",
    "typedoc": "0.14.2",
    "typescript": "^3.0.0"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testURL": "http://localhost",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
